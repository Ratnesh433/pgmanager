<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Records | Admin Portal</title>
    <link rel="stylesheet" href="styles/view.css">
</head>
<body>
    <div class="main-container">
        <header class="page-header">
            <h1>User Records</h1>
            <a href="/index.ejs" class="btn-new">+ New Record</a>
        </header>
        
        <div class="card-container">
            <% if (rows && rows.length > 0) { %>
                <% rows.forEach(function(user) { %>
                    <div class="card">
                        <div class="card-header">
                            <h3><%= user.name %></h3>
                            <span class="id-badge">ID: <%= user.id %></span>
                        </div>
                        <div class="card-content">
                            <p><strong>Gender:</strong> <%= user.gender %></p>
                            <p><strong>Phone:</strong> <%= user.phone %></p>
                            <p><strong>Aadhar:</strong> <%= user.aadhar %></p>
                        </div>
                        <div class="card-actions">
                            <a href="/edit/<%= user.id %>" class="btn-edit">Edit</a>
                            <form action="/delete/<%= user.id %>" method="POST" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-records">
                    <p>No records found</p>
                    <a href="/index.ejs" class="btn-new">Create New Record</a>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html> 